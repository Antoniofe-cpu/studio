cat <<EOF > .gitignore
# File di configurazione locali e chiavi
serviceAccountKey.json
gcp_vision_credentials.json

# Ambiente virtuale e dipendenze
venv/
*.venv
.env

# Cache di Python
__pycache__/
*.pyc
*.pyo
*.pyd

# File di debug generati da Playwright
debug_*.png
debug_*.html

# Dipendenze Node.js
node_modules

# File di sistema macOS e segreti personali
.DS_Store
secret.txt
secrets.txt
EOF
